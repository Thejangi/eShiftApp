<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <!-- Database connection strings section:
       Contains one or more named connection strings used by the application at runtime. -->
  <connectionStrings>
	  <!--
      name="eShiftDb"
        • Identifier for this connection string when accessed via:
            ConfigurationManager
              .ConnectionStrings["eShiftDb"]
              .ConnectionString;
      connectionString="…"
        • Server=localhost       — Hostname or IP address of the MySQL server.
        • Database=esoft         — Target MySQL database name.
        • Uid=root               — Database user name.
        • Pwd=kf8pfmj0kf8pfqJHu3#RJqJkl4;  
                                 — Password for the specified user.
      providerName="MySql.Data.MySqlClient"
        • ADO.NET provider for MySQL (installed via MySql.Data NuGet package).
    -->
    <add
      name="eShiftDb"
      connectionString="Server=localhost;Database=eShiftDB;Uid=root;Pwd=kf8pfmj0kf8pfqJHu3#RJqJkl4;"
      providerName="MySql.Data.MySqlClient" />
  </connectionStrings>
</configuration>
